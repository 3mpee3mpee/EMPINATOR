# corneGLP keymap for boardsource/unicorne

# RGB Configuration
RGB_MATRIX_ENABLE = yes        # Enable RGB Matrix
RGBLIGHT_ENABLE = no           # Disable RGB Light as we're using RGB Matrix

# Enable OLED if available
OLED_ENABLE = yes

# Enable encoder support
ENCODER_ENABLE = yes

# Enable tap dance
TAP_DANCE_ENABLE = no

# Enable leader key
LEADER_ENABLE = yes

# Enable mouse keys
MOUSEKEY_ENABLE = yes

# Enable extra keys
EXTRAKEY_ENABLE = yes

# Enable audio if available
AUDIO_ENABLE = yes

# Enable haptic feedback if available
HAPTIC_ENABLE = no

# Enable split keyboard features
SPLIT_KEYBOARD = yes

# Enable WPM calculation
WPM_ENABLE = yes

LTO_ENABLE = yes

# Enable auto shift
AUTO_SHIFT_ENABLE = no

# Enable caps word
CAPS_WORD_ENABLE = yes

# Enable combos
COMBO_ENABLE = yes

# Enable key overrides
KEY_OVERRIDE_ENABLE = no

# Enable pointing device (analog joystick)
POINTING_DEVICE_ENABLE = no

VIA_ENABLE = yes